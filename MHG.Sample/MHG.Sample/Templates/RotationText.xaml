<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHG.Sample.Templates.RotationText"
             Title="Rotation - Event">
  <StackLayout>
    <Label x:Name="rotateLabel"
           Text="EVOLVE 2016"
           FontSize="Large"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"></Label>
    
    <Slider Minimum="0" Maximum="360" ValueChanged="Slider_OnValueChanged"></Slider>
    
    <Label x:Name="displayLabel"
           Text="0"
           FontSize="Medium"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"></Label>
  </StackLayout>
</ContentPage>