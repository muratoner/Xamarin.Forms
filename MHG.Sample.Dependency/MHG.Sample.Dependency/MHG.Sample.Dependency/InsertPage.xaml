<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHG.Sample.Dependency.InsertPage">
  <ContentPage.Content>
    <TableView Intent="Form">
      <TableRoot>
        <TableSection Title="Öğrenci Ekle">
          <EntryCell Label="Adınız" x:Name="TxtName"></EntryCell>
          <EntryCell Label="Soyadınız" x:Name="TxtSurname"></EntryCell>
          <ViewCell>
            <Button Text="Ekle" Clicked="Button_OnClicked"></Button>
          </ViewCell>
        </TableSection>
      </TableRoot>
    </TableView>
  </ContentPage.Content>
</ContentPage>